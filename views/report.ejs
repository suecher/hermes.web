<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>统计</title>
    <!-- 引入 echarts.js -->
    <script src="../../lib/echarts/dist/echarts.min.js"></script>
</head>
<body>
<!-- 为ECharts准备一个具备大小（宽高）的Dom -->
<div id="main" style="width: 100%;height:350px;"></div>
<div id="linemarker" style="width: 100%;height:350px;"></div>
<div id="userId" style="display: none"><%= userId%></div>
<div id="pointlist" style="display: none"><%= pointlist%></div>
<script type="text/javascript">


    var pointlist = '<%- JSON.stringify(pointlist) %>';
    pointlist = JSON.parse(pointlist);
    console.log(pointlist);


    // 基于准备好的dom，初始化echarts实例
    var myChart = echarts.init(document.getElementById('main'));
    var linemarker = echarts.init(document.getElementById('linemarker'));

    option = {
        title : {
            text: '单箭分布统计表',
            subtext: '统计环数分布',
            x:'center'
        },
        tooltip : {
            trigger: 'item',
            formatter: "{a} <br/>{b} : {c} ({d}%)"
        },
        calculable : true,
        series : [
            {
                name:'环数',
                type:'pie',
                radius : [30, 120],
                center : ['50%', '50%'],
                roseType : 'area',
                data:[
                    {value:pointlist[1], name:'1环'},
                    {value:pointlist[2], name:'2环'},
                    {value:pointlist[3], name:'3环'},
                    {value:pointlist[4], name:'4环'},
                    {value:pointlist[5], name:'5环'},
                    {value:pointlist[6], name:'6环'},
                    {value:pointlist[7], name:'7环'},
                    {value:pointlist[8], name:'8环'},
                    {value:pointlist[9], name:'9环'},
                    {value:pointlist[10], name:'10环'},
                    {value:pointlist[0], name:'脱靶'}
                ]
            }
        ]
    };

    option2 = {
        title: {
            text: '未来一周气温变化',
            subtext: '纯属虚构'
        },
        tooltip: {
            trigger: 'axis'
        },
        legend: {
            data:['最高气温','最低气温']
        },
        toolbox: {
            show: true,
            feature: {
                dataZoom: {
                    yAxisIndex: 'none'
                },
                dataView: {readOnly: false},
                magicType: {type: ['line', 'bar']},
                restore: {},
                saveAsImage: {}
            }
        },
        xAxis:  {
            type: 'category',
            boundaryGap: false,
            data: ['周一','周二','周三','周四','周五','周六','周日']
        },
        yAxis: {
            type: 'value',
            axisLabel: {
                formatter: '{value} °C'
            }
        },
        series: [
            {
                name:'最高气温',
                type:'line',
                data:[11, 11, 15, 13, 12, 13, 10],
                markPoint: {
                    data: [
                        {type: 'max', name: '最大值'},
                        {type: 'min', name: '最小值'}
                    ]
                },
                markLine: {
                    data: [
                        {type: 'average', name: '平均值'}
                    ]
                }
            },
            {
                name:'最低气温',
                type:'line',
                data:[1, -2, 2, 5, 3, 2, 0],
                markPoint: {
                    data: [
                        {name: '周最低', value: -2, xAxis: 1, yAxis: -1.5}
                    ]
                },
                markLine: {
                    data: [
                        {type: 'average', name: '平均值'},
                        [{
                            symbol: 'none',
                            x: '90%',
                            yAxis: 'max'
                        }, {
                            symbol: 'circle',
                            label: {
                                normal: {
                                    position: 'start',
                                    formatter: '最大值'
                                }
                            },
                            type: 'max',
                            name: '最高点'
                        }]
                    ]
                }
            }
        ]
    };


    // 使用刚指定的配置项和数据显示图表。
    myChart.setOption(option);
    //linemarker.setOption(option2);
</script>
</body>
</html>