<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ECharts</title>
    <!-- 引入 echarts.js -->
    <script src="../../lib/echarts/dist/echarts.min.js"></script>
</head>
<body>
<!-- 为ECharts准备一个具备大小（宽高）的Dom -->
<div id="main" style="width: 100%;height:400px;"></div>
<script type="text/javascript">
    // 基于准备好的dom，初始化echarts实例
    var myChart = echarts.init(document.getElementById('main'));

    option = {
        title : {
            text: '单箭分布统计表',
            subtext: '统计环数分布',
            x:'center'
        },
        tooltip : {
            trigger: 'item',
            formatter: "{a} <br/>{b} : {c} ({d}%)"
        },
        calculable : true,
        series : [
            {
                name:'环数',
                type:'pie',
                radius : [30, 120],
                center : ['50%', '50%'],
                roseType : 'area',
                data:[
                    {value:10, name:'1环'},
                    {value:1, name:'2环'},
                    {value:15, name:'3环'},
                    {value:25, name:'4环'},
                    {value:20, name:'5环'},
                    {value:35, name:'6环'},
                    {value:30, name:'7环'},
                    {value:40, name:'8环'},
                    {value:40, name:'9环'},
                    {value:40, name:'脱靶'}
                ]
            }
        ]
    };


    // 使用刚指定的配置项和数据显示图表。
    myChart.setOption(option);
</script>
</body>
</html>